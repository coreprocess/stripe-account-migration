{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": ["DOM", "ES2017"],
        "outDir": "build",
        "rootDir": "src",
        "downlevelIteration": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noErrorTruncation": true
    }
}
